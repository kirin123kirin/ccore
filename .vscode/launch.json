{
  // Variable Example
  // ${workspaceFolder}	/home/your-username/your-project
  // ${workspaceFolderBasename}	your-project
  // ${file}	/home/your-username/your-project/folder/file.ext
  // ${relativeFile}	folder/file.ext
  // ${relativeFileDirname}	folder
  // ${fileBasename}	file.ext
  // ${fileBasenameNoExtension}	file
  // ${fileDirname}	/home/your-username/your-project/folder
  // ${fileExtname}	.ext
  // ${lineNumber}	VSCodeの編集画面で現在選択されている行番号
  // ${selectedText}	VSCodeの編集画面で現在選択されているテキスト
  // ${execPath}	実行中のVS Code実行可能ファイル「code.exe」のアドレス
  // ${env:xxxxxx} 環境変数
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C++ Debug",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "preLaunchTask": "Debug C++",
      "console": "internalConsole"
    },
    {
      "name": "C++ Release",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "preLaunchTask": "Release C++",
      "console": "internalConsole"
    },
    //
    // from pytest Run Debugger
    //
    {
      "name": "Debug Setup.py",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "python",
      "args": [
        "-m",
        "pytest",
        ".."
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build",
      "environment": [],
      "preLaunchTask": "DebugSetup.py",
      "console": "internalConsole"
    },
    // for Release Setup Running
    {
      "name": "Release Setup.py",
      "type": "python",
      "request": "launch",
      "program": "-m",
      "args": [
        "pytest",
        ".."
      ],
      "justMyCode": false,
      "cwd": "${workspaceFolder}/build",
      "preLaunchTask": "ReleaseSetup.py",
      "console": "internalConsole"
    },
    //
    // from Python to C++ Debug Run
    //
    {
      "name": "Instant Debug from py",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "python",
      "args": [
        "${file}"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build",
      "environment": [],
      "console": "internalConsole",
      "preLaunchTask": "DebugSetup.py"
    },
    {
      "name": "Instant Release from py",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "python",
      "args": [
        "${file}"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/build",
      "environment": [],
      "console": "internalConsole",
      "preLaunchTask": "ReleaseSetup.py"
    },

    // for Python
    {
      "name": "Python: Normal Run",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "internalConsole"
    },
  ]
}
